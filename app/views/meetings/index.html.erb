<p style="color: green"><%= notice %></p>

<% content_for :title, "Meetings" %>

<h1>Meetings</h1>

<div id="meetings">
  <% @meetings.each do |meeting| %>
    <%= render meeting %>
    <p>
      <%= link_to "Show this meeting", meeting %>
    </p>
  <% end %>
</div>

<%= button_to "New meeting", meetings_path, params: { meeting: { status: 'new' } }, method: :post %>
